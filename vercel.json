{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps && cd api && npm install --legacy-peer-deps && cd ../web && npm install --legacy-peer-deps",
  "buildCommand": "cd web && npm run build",
  "outputDirectory": "web/dist",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    // API routes - must come before catch-all to prevent frontend routing from intercepting
    {
      "source": "/health",
      "destination": "/api/index"
    },
    {
      "source": "/health/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/events/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/checkout/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/me",
      "destination": "/api/index"
    },
    {
      "source": "/me/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/metrics",
      "destination": "/api/index"
    },
    // Frontend SPA routing - catch-all for all non-API routes
    // This serves index.html for the root path and all frontend routes
    // Vercel will serve static files from outputDirectory (web/dist) automatically
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

