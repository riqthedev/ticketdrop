{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps; cd api && npm install --legacy-peer-deps; cd ../web && npm install --legacy-peer-deps",
  "buildCommand": "cd web && npm run build",
  "outputDirectory": "web/dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "src/**"
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/index"
    },
    {
      "source": "/health/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/events",
      "destination": "/api/index"
    },
    {
      "source": "/events/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/checkout",
      "destination": "/api/index"
    },
    {
      "source": "/checkout/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/admin",
      "destination": "/api/index"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/me",
      "destination": "/api/index"
    },
    {
      "source": "/me/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/metrics",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

